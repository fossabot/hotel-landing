include ../logo/logo
mixin ui-page({withBackground=false, fullWidth=false} = {})
    - let classes = withBackground ? "ui-page_with-background": ""
    - classes = `${classes}${fullWidth ? ' ui-page_full-width' : ''}`
    article.ui-page(class=classes)
        +logo({className:'ui-page__logo', type: 'light'})
        .ui-page__content(class=fullWidth ? 'ui-page__content_full-width': 'ui-page__content_columned')
            if block
                block


